<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/nhs_blue</item>
        <item name="colorPrimaryVariant">@color/nhs_lighter_blue</item>
        <item name="colorPrimaryDark">@color/nhs_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/nhs_button_green</item>
        <item name="colorSecondaryVariant">@color/nhs_button_green</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/primary_text_grey</item>
        <item name="android:textColorSecondary">@color/secondary_text_grey</item>

        <!-- Text Direction -->
        <item name="android:textDirection">locale</item>

        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/primary_text_grey</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/primary_text_grey</item>
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>

        <item name="android:textViewStyle">@style/AppTextView</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="titleTextColor">@color/white</item>
        <item name="editTextBackground">@color/white</item>
        <item name="editTextBorder">@color/black</item>

        <item name="android:statusBarColor">@color/nhs_blue</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>

        <item name="android:actionOverflowButtonStyle">@style/Overflow</item>
        <item name="aboutAppTexColor">@color/about_app_text_color</item>

        <item name="splashScreenColor">@color/nhs_blue</item>
        <item name="toolbarColor">@color/nhs_blue</item>
        <item name="toolbarTextColor">?attr/colorOnPrimary</item>
        <item name="bottomSheetDialogTheme">@style/ExpandedBottomSheetDialog</item>

        <item name="riskLevelNeutralPanelIconTint">@color/nhs_lighter_blue</item>
        <item name="riskLevelNeutralPanelTextColor">@color/dark_grey</item>
        <item name="riskLevelNeutralPanelChevronColor">@color/dark_grey</item>
        <item name="riskLevelNeutralPanelBackgroundDrawable">@drawable/area_risk_neutral_background</item>

        <item name="riskLevelGreenPanelIconTint">@color/risk_green</item>
        <item name="riskLevelGreenPanelTextColor">@color/dark_grey</item>
        <item name="riskLevelGreenPanelChevronColor">@color/dark_grey</item>
        <item name="riskLevelGreenPanelBackgroundDrawable">@drawable/area_risk_green_background</item>

        <item name="riskLevelYellowPanelIconTint">@color/risk_yellow</item>
        <item name="riskLevelYellowPanelTextColor">@color/dark_grey</item>
        <item name="riskLevelYellowPanelChevronColor">@color/dark_grey</item>
        <item name="riskLevelYellowPanelBackgroundDrawable">@drawable/area_risk_yellow_background</item>

        <item name="riskLevelAmberPanelIconTint">@color/risk_amber</item>
        <item name="riskLevelAmberPanelTextColor">@color/dark_grey</item>
        <item name="riskLevelAmberPanelChevronColor">@color/dark_grey</item>
        <item name="riskLevelAmberPanelBackgroundDrawable">@drawable/area_risk_amber_background</item>

        <item name="riskLevelRedPanelIconTint">@color/risk_red</item>
        <item name="riskLevelRedPanelTextColor">@color/dark_grey</item>
        <item name="riskLevelRedPanelChevronColor">@color/dark_grey</item>
        <item name="riskLevelRedPanelBackgroundDrawable">@drawable/area_risk_red_background</item>

        <item name="riskLevelMaroonPanelIconTint">@color/risk_maroon</item>
        <item name="riskLevelMaroonPanelTextColor">@color/dark_grey</item>
        <item name="riskLevelMaroonPanelChevronColor">@color/dark_grey</item>
        <item name="riskLevelMaroonPanelBackgroundDrawable">@drawable/area_risk_maroon_background</item>

        <item name="riskLevelBlackPanelIconTint">@color/risk_black</item>
        <item name="riskLevelBlackPanelTextColor">@color/white</item>
        <item name="riskLevelBlackPanelChevronColor">@color/tertiary_text_grey</item>
        <item name="riskLevelBlackPanelBackgroundDrawable">@drawable/area_risk_black_background</item>
    </style>

    <style name="ExpandedBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">512dp</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="PrimaryToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textAllCaps">false</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
    </style>
</resources>
